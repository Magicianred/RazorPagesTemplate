@page
@model LoginWithRecoveryCodeModel
@inject IStringLocalizer<SharedResource> sharedLoc
@inject IHtmlLocalizer<SharedResource> sharedHtmlLoc
@{
    ViewData["Title"] = sharedLoc["Recovery code verification"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    @sharedHtmlLoc["You have requested to log in with a recovery code"]
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control  form-control-light" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@sharedLoc["Log in"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
