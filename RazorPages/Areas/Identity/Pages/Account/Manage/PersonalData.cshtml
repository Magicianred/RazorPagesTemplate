@page
@model PersonalDataModel
@inject IStringLocalizer<SharedResource> sharedLoc
@{
    ViewData["Title"] = sharedLoc["Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@sharedLoc["Your account contains personal data"]</p>
        <p>
            <strong>@sharedLoc["Deleting this data will permanently remove your account"]</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@sharedLoc["Download"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@sharedLoc["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}